(define (append! lst1 lst2)
  (if (null? lst1)
      lst2
      (begin
        (if (null? (cdr lst1))
            (set-mcdr! lst1 lst2)
            (append! (cdr lst1) lst2))
        lst1)))

(define x '(a b))
(define y '(c d))
(append! x y)

(define x (mcons 'a (mcons 'b '())))
(define y (mcons 'c (mcons 'd '())))